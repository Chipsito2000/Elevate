    <div class="row mt-4">
        <div class="col-md-12 col-lg-6 mb-4">
            <div class="card">
                <div class="card-header">CLIENTES EN EXISTENCIA</div>
                <div class="card-body">
                    <canvas id="listaclientes" class="chart-canvas"></canvas>
                </div>
            </div>
        </div>

        <div class="col-md-12 col-lg-6 mb-4">
            <div class="card">
                <div class="card-header">PROVEEDORES EN EXISTENCIA</div>
                <div class="card-body">
                    <canvas id="listaproveedores" class="chart-canvas"></canvas>
                </div>
            </div>
        </div>
    </div>
</body>



<script>
        document.addEventListener('DOMContentLoaded', function () {
            // Datos obtenidos desde el servidor
            const numClientes = @ViewBag.NumClientes;
            const numProveedores = @ViewBag.NumProveedores;

            // Configuración de los gráficos
            const ctxClientes = document.getElementById('listaclientes').getContext('2d');
            const ctxProveedores = document.getElementById('listaproveedores').getContext('2d');

            // Gráfico de Clientes
            new Chart(ctxClientes, {
                type: 'bar',
                data: {
                    labels: ['Clientes'],
                    datasets: [{
                        label: 'Número de Clientes',
                        data: [numClientes],
                        backgroundColor: 'rgba(9, 129, 176, 0.2)',
                        borderColor: 'rgba(9, 129, 176, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });

            // Gráfico de Proveedores
            new Chart(ctxProveedores, {
                type: 'bar',
                data: {
                    labels: ['Proveedores'],
                    datasets: [{
                        label: 'Número de Proveedores',
                        data: [numProveedores],
                        backgroundColor: 'rgba(255, 99, 132, 0.2)',
                        borderColor: 'rgba(255, 99, 132, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        });
</script>