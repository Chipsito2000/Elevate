<!-- Encabezado de pantalla -->
@{
    ViewBag.Titulo = "Login";
    Layout = null;

}
<html>
<!--Corazon de vista-->
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/css/LoginStyle.css" rel="StyleSheet">
    <title>ELEVATE ERP</title>
</head>


<!-- cuerpo de pantalla -->
<Body>
     <div class="seccion">
          <h1 class="font"><strong>Elevate ERP</strong></h1>
          <div class="Prin">                     
              <h2 class=" font2"> <STRONG> Bienvenidos </STRONG></h2>
              <div class= "row">

                  @if (ViewBag.Error != null)
                  {
                      <div class="alert alert-danger" role="alert">
                        @ViewBag.Error
                      </div>
                  }

                  <form method="post" action="@Url.Action("Login", "Login")">

                        <div class="form-group">
                            <input type="text" name="User" placeholder="USUARIO" class="form-control" />
                        </div

                        <div class="form-group">
                            <input type="password" name="Clave" placeholder="CLAVE" class="form-control" />
                        </div>

                      <button type="submit" class="btn btn-primary">Iniciar sesión</button>
                  </form> 

              <div>
         </div>

     </div>
</Body>

</html>